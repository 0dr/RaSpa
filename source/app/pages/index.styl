
.main-body
    display flex
    flex-wrap wrap

.main-body input[type="radio"]
    display none


.main-body label
    width max-content
    font-weight bold
    background #e2e2e2
    padding 15px
    margin-bottom 0px


.main-body .tab
    width 100%
    padding 15px
    background #fff
    order 1
    display none
    border black
    border-radius 15px
    border-style groove

.main-body input[type='radio']:checked + label + .tab
    display block
    clip-path inset(0)
    background none
    
.main-body input[type='radio']:checked + label
    background #ccc